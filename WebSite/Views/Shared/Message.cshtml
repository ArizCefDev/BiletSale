@{
    ViewBag.Show = "block";
    if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        ViewBag.Class = "alert-danger";
        ViewBag.Message = ViewBag.Error;
    }
    else if (!string.IsNullOrEmpty(ViewBag.Success))
    {
        ViewBag.Class = "alert-success";
        ViewBag.Message = ViewBag.Success;
    }
    else
    {
        ViewBag.Show = "none";
    }
}
<div class="mt-2 alert @ViewBag.Class .alert-dismissible fade show" style="display : @ViewBag.Show">
    <strong>@ViewBag.Message</strong>
    <button type="button" class="btn-close" style="float:right" data-bs-dismiss="alert"></button>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>