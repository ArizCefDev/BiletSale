@model IEnumerable<DTO.DTOEntity.AboutDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<section class="w3l-content-with-photo-4" id="about">
    <div class="content-with-photo4-block ">
        <div class="container">
            <div class="main-titles-head text-center">
                <h3 class="header-name ">
                    Haqqımızda
                </h3>
            </div>
            <div class="cwp4-two row">
                @foreach (var item in Model)
                {
                    <div class="cwp4-image col-lg-5 col-md-6">
                        <img src="@item.Image" alt="product" class="img-responsive about-me">
                    </div>
                    <div class="cwp4-text col-lg-7 col-md-6">
                        <div class="posivtion-grid">
                            <h4 class="">@item.Title</h4>
                            <p class="para ">
                                @item.Text
                            </p>
                            <br>
                            <h5>Ölkələrə görə satışda olan biletlər</h5>
                            <div class="about-resume">
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Türkiyə</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Rusiya</a></p>
                                <p class="para">
                                    <span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Gürcüstan</a>
                                </p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Qazaxıstan</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Özbəkistan</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Türmənistan</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Fansa</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">İngiltərə</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">Almaniya</a></p>
                                <p class="para"><span class="fa fa-angle-right" aria-hidden="true"></span><a href="#page">İtaliya</a></p>

                                <p></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<partial name="~/Views/Partials/FooterPartial.cshtml" />
